{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Extension",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/MarkdownConverter/lib/**/*.js"
            ],
            "preLaunchTask": "Build"
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Common Tests",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/MarkdownConverter/lib/test"
            ],
            "env": {
                "TEST_SUITE": "common"
            },
            "outFiles": [
                "${workspaceFolder}/MarkdownConverter/lib/test/**/*.js"
            ],
            "preLaunchTask": "Build"
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Tests for Single-File Mode",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/MarkdownConverter/lib/test",
                "${workspaceFolder}/MarkdownConverter/src/test/single-file/Test.md"
            ],
            "env": {
                "TEST_SUITE": "single-file"
            },
            "outFiles": [
                "${workspaceFolder}/MarkdownConverter/lib/test/**/*.js"
            ]
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Tests for the Single-Folder Mode",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/MarkdownConverter/lib/test",
                "${workspaceFolder}/MarkdownConverter/src/test/single-folder"
            ],
            "env": {
                "TEST_SUITE": "single-folder"
            },
            "outFiles": [
                "${workspaceFolder}/MarkdownConverter/lib/test/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Launch Tests",
            "configurations": [
                "Launch Common Tests",
                "Launch Tests for Single-File Mode",
                "Launch Tests for the Single-Folder Mode"
            ]
        }
    ]
}
